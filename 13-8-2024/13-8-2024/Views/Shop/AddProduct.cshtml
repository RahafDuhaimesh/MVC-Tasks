@{
    ViewBag.Title = "Add Product";
}

<h2 style="text-align: center; margin-top: 20px; color: #333;">Add Product</h2>

<div style="display: flex; justify-content: center; margin-top: 40px;">
    <div style="width: 400px; padding: 20px; background-color: #fff; border-radius: 8px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
        @using (Html.BeginForm("AddProduct", "Shop", FormMethod.Post))
        {
            <div style="margin-bottom: 15px;">
                <label for="name" style="display: block; font-weight: bold; color: #555;">Product Name:</label>
                <input type="text" id="name" name="name" required style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;" />
            </div>

            <div style="margin-bottom: 15px;">
                <label for="price" style="display: block; font-weight: bold; color: #555;">Price:</label>
                <input type="text" id="price" name="price" required style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;" />
            </div>

            <div style="margin-bottom: 15px;">
                <label for="imgURL" style="display: block; font-weight: bold; color: #555;">Image URL:</label>
                <input type="text" id="imgURL" name="imgURL" style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;" />
            </div>

            <input type="submit" value="Add Product" style="width: 100%; padding: 10px; background-color: #4CAF50; color: white; border: none; border-radius: 4px; cursor: pointer; font-weight: bold; transition: background-color 0.3s ease;" />
        }

        
    </div>
</div>
